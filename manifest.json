{
	"manifest_version":2,
	"name":"my tools",
	"version":"1.0.0",
	"description":"一些个人使用的工具集",
	"browser_action":{
		"default_icon":"img/cc.gif",
		"default_title":"MT",
		"default_popup":"html/popup.html"
	},
	"permissions":[
		"http://*/",
		"https://*/",
		"bookmarks",
		"tabs",
		"history"
	],
	"background":{
		"page":"html/background.html"
	},
	"content_scripts":[{
		"matches":["http://*/*","https://*/*"],
		"js":["js/jquery-3.0.0.js","js/bootstrap.js"],
		"css":["css/bootstrap.css"],
		"run_at":"document_end",
		"all_frames":true
	}]

}